{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "nodenext"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "scripts/**/*",
    "src/**/*",
    "assets/*"
  ]
}